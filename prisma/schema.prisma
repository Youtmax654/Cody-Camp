generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model messages {
  id         Int       @id @default(autoincrement())
  senderId   String    @db.Char(36)
  receiverId String    @db.Char(36)
  content    String    @db.Text
  datetime   DateTime? @default(now()) @db.Timestamp(0)

  @@index([receiverId], map: "receiverId_FK")
  @@index([senderId])
}

model users {
  id        String  @id @db.Char(36)
  firstName String  @db.Char(50)
  lastName  String  @db.Char(50)
  email     String  @unique @db.VarChar(100)
  password  String  @db.VarChar(255)
  role      String  @default("Ã©tudiant") @db.VarChar(50)
  active    Boolean @default(false)
}

model announcement {
  id       Int       @id @default(autoincrement())
  senderId String    @db.Char(36)
  content  String    @db.Text
  datetime DateTime? @default(now()) @db.Timestamp(0)

  @@index([senderId])
}

model group_messages {
  id       Int       @id @default(autoincrement())
  senderId String    @db.Char(36)
  groupId  Int
  content  String    @db.Text
  datetime DateTime? @default(now()) @db.Timestamp(0)

  @@index([groupId])
  @@index([senderId])
}

model groups {
  id          Int    @id @default(autoincrement())
  name        String @db.Char(50)
  description String @db.Text
}

model planning {
  id        Int      @id @default(autoincrement())
  date      DateTime @db.Date
  startTime DateTime @default(now()) @db.Timestamp(0)
  endTime   DateTime @default(dbgenerated("('0000-00-00 00:00:00')")) @db.Timestamp(0)
  course    String   @db.Char(50)
  teacher   String   @db.Char(50)
  room      String   @db.Char(50)
  class     String   @db.Char(50)
}

model user_groups {
  id      Int    @id @default(autoincrement())
  userId  String @db.Char(36)
  groupId Int

  @@index([groupId])
  @@index([userId])
}

model authtokens {
  id     String @id @db.VarChar(255)
  userId String @db.Char(36)

  @@index([userId])
}
